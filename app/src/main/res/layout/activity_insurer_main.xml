<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vhernanm.blockchainandroidapp.InsurerMainActivity">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ibm_logo"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/user_icon"
        android:id="@+id/userIcon"
        android:onClick="logout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenindo..."
        android:layout_toRightOf="@id/userIcon"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:onClick="logout"
        android:id="@+id/username"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/register_policy_icon"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Registro"
                android:textAllCaps="false"
                android:background="@color/lightBlue"
                android:textColor="@color/white"
                android:onClick="buttonPressed"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/update_policy_icon"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="ActualizaciÃ³n"
                android:textAllCaps="false"
                android:background="@color/lightBlue"
                android:textColor="@color/white"
                android:onClick="buttonPressed"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/find_policy_icon"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Consulta"
                android:textAllCaps="false"
                android:background="@color/lightBlue"
                android:textColor="@color/white"
                android:onClick="buttonPressed"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="220dp"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/blockchain_logo"
        android:id="@+id/imageView2" />

</RelativeLayout>
